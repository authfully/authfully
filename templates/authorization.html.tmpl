<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{- if .Title }}{{ .Title }}{{- else }}Authorization{{- end }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            color: #333;
        }
        form {
            margin-top: 20px;
        }
        ul {
            display: block;
        }
		.authorization {
			display: block;
			max-width: 400px;
			width: calc(100% - 2rem);
			margin: 0 auto;
		}
		.authorization__form {
			display: flex;
			flex-direction: column;
			gap: 1rem 0;
		}
		.authorization__form__button {
			padding: 0.5rem;
			border: 1px solid #ccc;
			border-radius: 4px;
			font-size: 1.2rem;
			cursor: pointer;
		}
		.authorization__form__warning {
			background-color: #f8d7da;
			color: #721c24;
			padding: 1rem;
			border: 1px solid #f5c6cb;
			border-radius: 4px;
			margin-bottom: 1rem;
		}


    </style>
</head>
<body>
    <main class="authorization">
        <h1>{{- if .Title }}{{ .Title }}{{- else }}Authorization{{- end }}</h1>
		{{- if .Warning }}
			<div class="authorization__form__warning">
				{{- if .Warning.Title }}
					<h2>{{ .Warning.Title }}</h2>
				{{- end }}
				<p>{{ .Warning.Description }}</p>
			</div>
		{{- end }}
        <form class="authorization__form" method="POST" action="{{ .Action }}">
            <div>{{ .Client.GetName }}</div>
            <ul>
                {{- range .AuthorizationRequest.Scopes }}
                    <li>{{ . }}</li>
                {{- end }}
            </ul>
            <button
                class="authorization__form__button"
                type="submit"
            >{{- if .ButtonText }}{{ .ButtonText }}{{- else }}Authorize{{- end }}</button>
        </form>
    </main>
</body>
</html>